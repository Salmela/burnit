<table class="user_stories">
<% user_stories.each do |story| %>
<% story.tasks.each_with_index do |task, index| %>
<tr>
<% if index == 0 %>
	<td class="story" rowspan="<%= story.tasks.length %>"><%= story.name %></td>
<% end %>
	<td><%= task.name %></td>
	<td><%= task.state %></td>
	<td><%= task.owner %></td>
	<!-- these are currently hard coded -->
	<td>2</td>
	<td>2</td>
	<td>2</td>
	<td>2</td>
	<td>1</td>
	<td>0</td>
	<td>0</td>
</tr>
<% end %>
<tr>
<% if story.tasks.length == 0 %>
	<td class="story"><%= story.name %></td>
	<td colspan="9" class="no_tasks">No tasks at this user story.</td>
</tr>
<% end %>
<% end %>
</table>
